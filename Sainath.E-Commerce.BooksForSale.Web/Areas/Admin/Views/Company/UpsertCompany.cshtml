@model Company
@{
    ViewData["Title"] = "UpsertCompany";
}

<div class="container">
    <p class="display-6 mt-4">
        @((Model.CompanyId != null) ? "Create" : "Update") company
    </p>
    <form method="post" asp-area="Admin" asp-controller="Company" asp-action="UpsertCompany">
        <input asp-for="@Model.CompanyId" hidden />
        <input asp-for="@Model.CreatedDateTime" hidden />
        <input asp-for="@Model.UpdatedDateTime" hidden />
        <div class="mt-4">
            <label asp-for="@Model.CompanyName" class="form-label"></label>
            <input asp-for="@Model.CompanyName" class="form-control" />
            <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.PhoneNumber" class="form-label"></label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.StreetAddress" class="form-label"></label>
            <input asp-for="@Model.StreetAddress" class="form-control" />
            <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.City" class="form-label"></label>
            <input asp-for="@Model.City" class="form-control"/>
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.State" class="form-label"></label>
            <input asp-for="@Model.State" class="form-control"/>
            <span asp-validation-for="@Model.State" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.PostalCode" class="form-label"></label>
            <input asp-for="@Model.PostalCode" class="form-control" />
            <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button class="btn btn-info mx-3" type="submit">@((Model.CompanyId != null) ? "Create" : "Update")</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-controller="Company" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

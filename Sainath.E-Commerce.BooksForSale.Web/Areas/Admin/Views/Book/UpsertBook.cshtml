@model Book

@{
    ViewData["Title"] = (Model.BookId == 0) ? "Create Book" : "Update Book";
}

<div class="container">
    <p class="display-6 mt-4">@(Model.BookId == 0 ? "Create a new book" : "Update the book")</p>
    <form method="post" asp-area="Admin" asp-controller="Book" asp-action="UpsertBook">
        <div class="row">
            <div class="mt-3 col-12">
                <label asp-for="@Model.Title" class="form-label"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="mt-3 col-12">
                <label asp-for="@Model.Description" class="form-label"></label>
                <br />
                <textarea asp-for="@Model.Description" rows="5" style="resize: none; width: 100%">
            </textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mt-3 col-6">
                <label asp-for="@Model.ISBN" class="form-label"></label>
                <input asp-for="@Model.ISBN" class="form-control" />
                <span asp-validation-for="@Model.ISBN" class="text-danger"></span>
            </div>
            <div class="mt-3 col-6">
                <label asp-for="@Model.Author" class="form-label"></label>
                <input asp-for="@Model.Author" class="form-control" />
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
            <div class="mt-3 col-6">
                <label asp-for="@Model.ListPrice" class="form-label"></label>
                <input asp-for="@Model.ListPrice" class="form-control" />
                <span asp-validation-for="@Model.ListPrice" class="text-danger"></span>
            </div>
            <div class="mt-3 col-6">
                <label asp-for="@Model.Price" class="form-label"></label>
                <input asp-for="@Model.Price" class="form-control" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mt-3 col-6">
                <label asp-for="@Model.Price50" class="form-label"></label>
                <input asp-for="@Model.Price50" class="form-control" />
                <span asp-validation-for="@Model.Price50" class="text-danger"></span>
            </div>
            <div class="mt-3 col-6">
                <label asp-for="@Model.Price100" class="form-label"></label>
                <input asp-for="@Model.Price100" class="form-control" />
                <span asp-validation-for="@Model.Price100" class="text-danger"></span>
            </div>
            <div class="mt-3 col-6">
                <label asp-for="@Model.CategoryId" class="form-label"></label>
                <select class="form-select">
                    <option value="0" disabled>--Select--</option>
                </select>
            </div>
            <div class="mt-3 col-6">
                <label asp-for="@Model.CoverTypeId" class="form-label"></label>
                <select class="form-select">
                    <option value="0" disabled>--Select--</option>
                </select>
            </div>
            <div class="mt-3 col-12">
                <label asp-for="@Model.ImageFile" class="form-label"></label>
                <br />
                <input asp-for="@Model.ImageFile" type="file" />
                <br />
                <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
            </div>
            <div class="mt-3 col-12">
                @if (Model.BookId == 0)
                {
                    <button type="submit" class="btn btn-info mx-3">Create book</button>
                }
                else
                {
                    <button type="submit" class="btn btn-info mx-3">Update book</button>
                }
                <a class="btn btn-secondary" asp-area="Admin" asp-controller="Book" asp-action="Index">Back to list</a>
            </div>
        </div>
    </form>
</div>

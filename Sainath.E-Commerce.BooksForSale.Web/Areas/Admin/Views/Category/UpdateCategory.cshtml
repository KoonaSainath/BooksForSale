@model Category

@{
    ViewData["Title"] = "Update category";
}

<div class="container">
    <p class="display-6 mt-4">Update the category @Model.CategoryName</p>
    <form method="post" asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory">
        <input asp-for="@Model.CategoryId" hidden />
        <input asp-for="@Model.CreatedDateTime" hidden />
        <input asp-for="@Model.UpdatedDateTime" hidden />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mt-3">
            <label asp-for="@Model.CategoryName" class="form-label"></label>
            <input asp-for="@Model.CategoryName" class="form-control"/>
            <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.DisplayOrder" class="form-label"></label>
            <input asp-for="@Model.DisplayOrder" class="form-control"/>
            <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary mx-3" type="submit">Update category</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

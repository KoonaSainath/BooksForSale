@model Category

@{
    ViewData["Title"] = "Delete category";
}

<div class="container">
    <p class="display-6 mt-4">Are you sure to delete the category @Model.CategoryName?</p>
    <form method="post" asp-area="Admin" asp-controller="Category" asp-action="RemoveCategory">
        <input asp-for="@Model.CategoryId" hidden/>
        <div class="mt-3">
            <label asp-for="@Model.CategoryName" class="form-label"></label>
            <input asp-for="@Model.CategoryName" class="form-control" readonly="readonly"/>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.DisplayOrder" class="form-label"></label>
            <input asp-for="@Model.DisplayOrder" class="form-control" readonly="readonly"/>
        </div>
        <div class="mt-3">
            <button class="btn btn-danger mx-3" type="submit">Delete category</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>

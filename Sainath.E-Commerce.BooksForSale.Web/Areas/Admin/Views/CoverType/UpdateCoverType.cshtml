@model CoverType

@{
    ViewData["title"] = "Update cover type";
}

<div class="container">
    <p class="display-6 mt-4">Update cover type</p>
    <form method="post" asp-area="Admin" asp-controller="CoverType" asp-action="UpdateCoverType">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="@Model.CreatedDateTime" hidden />
        <input asp-for="@Model.UpdatedDateTime" hidden />
        <div class="mt-3">
            <label asp-for="@Model.CoverTypeName" class="form-label"></label>
            <input asp-for="@Model.CoverTypeName" class="form-control" />
            <span asp-validation-for="@Model.CoverTypeName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary mx-3" type="submit" >Update</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-controller="CoverType" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>

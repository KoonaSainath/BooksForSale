@model CoverType

@{
    ViewData["Title"] = "Delete cover type";
}

<div class="container">
    <p class="display-6 mt-4">Delete cover type</p>
    <form method="post" asp-area="Admin" asp-controller="CoverType" asp-action="RemoveCoverType">
        <input asp-for="@Model.CoverTypeId" hidden />
        <div class="mt-3">
            <label asp-for="@Model.CoverTypeName" class="form-label"></label>
            <input asp-for="@Model.CoverTypeName" class="form-control" readonly = "readonly"/>
            <span asp-validation-for="@Model.CoverTypeName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button class="btn btn-danger" type="submit">Delete cover type</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-controller="CoverType" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
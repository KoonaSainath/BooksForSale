@model CoverType

@{
    ViewData["Title"] = "Create a new cover type";
}

<div class="container">
    <p class="display-6 mt-4">Create a new cover type</p>
    <form method="post" asp-area="Admin" asp-controller="CoverType" asp-action="InsertCoverType">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mt-3">
            <label asp-for="@Model.CoverTypeName" class="form-label"></label>
            <input asp-for="@Model.CoverTypeName" class="form-control" />
            <span asp-validation-for="@Model.CoverTypeName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary mx-3" type="submit">Create cover type</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-controller="CoverType" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

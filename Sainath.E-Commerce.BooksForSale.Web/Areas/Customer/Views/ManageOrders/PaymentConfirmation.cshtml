@model int
@{
    ViewData["Title"] = "Payment Confirmation";
}

<div class="container row">
    <img src="~/images/payment_successful.png" style="width: 350px; height: 300px; margin-left: auto; margin-right: auto; display: block;" class="mt-4" />
    <h4 class="text-center mt-4">Payment is successful!</h4>
    <h6 class="text-center mt-2">Order id: @Model</h6>
    <a class="text-center btn btn-info" asp-area="Customer" asp-controller="ManageOrders" asp-action="GetOrder" asp-route-orderHeaderId="@Model">Back to order details</a>
</div>

